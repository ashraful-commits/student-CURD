        </div>
        <!------------------------------------------------- student form section -->
        <div class="student w-full p-5 h-auto flex flex-wrap justify-center ">
            <div class="title text-center h-10 w-full bg-purple-800 flex justify-between px-4 items-center">
                <a href="/students" class=" text-purple-900 inline-block px-3 bg-white py-2">BACK TO STUDENTS</a>
                <h1 class="text-white">STUDENT FORM</h1>
            </div>
           <div>
            <!--------------------------------------------------------------- form  -->
            <form action="/students/Studentform" method="post" enctype="multipart/form-data">
                <div class="my-3">
                    <label for="" class=" block text-white font-bold uppercase focus:outline-none focus:border-none">Name</label>
                    <input class="w-full px-2" type="text" name="name">
                </div>
                <div class="my-3">
                    <label for="" class="text-white font-bold uppercase focus:outline-none focus:border-none">Class</label>
                    <select name="stu_class" class="w-full px-2" id="">
                        <option value="One">One</option>
                        <option value="Two">Two</option>
                        <option value="Three">Three</option>
                        <option value="Four">Four</option>
                        <option value="Five">Five</option>
                        <option value="Six">Six</option>
                        <option value="Seven">Seven</option>
                        <option value="Eight">Eight</option>
                        <option value="Nine">Nine</option>
                        <option value="Ten">Ten</option>
                    </select>
                </div>
                <div class="my-3">
                    <label for="" class="text-white font-bold uppercase focus:outline-none focus:border-none">Age</label>
                    <input class="w-full px-2" type="number" name="age">
                </div>
                <div class="my-3">
                    <label for="" class="text-white font-bold uppercase focus:outline-none focus:border-none">Cell</label>
                    <input class="w-full px-2" type="number" name="cell">
                </div>
                <div class="my-3">
                    <label for="" class="text-white font-bold uppercase focus:outline-none focus:border-none">Gender</label>
                    <select name="gender" id="">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                </div>
                <div class="my-3">
                    <label for="" class="text-white font-bold uppercase focus:outline-none focus:border-none">Email</label>
                    <input class="w-full px-2" type="email" name="email">
                </div>
                <div class="my-3">
                    <label for="" class="text-white font-bold uppercase focus:outline-none focus:border-none">Location</label>
                    <select class="w-full px-2" name="location" id="">
                        <option value="Mirpur">Mirpur</option>
                        <option value="Badda">Badda</option>
                        <option value="Uttara">Uttara</option>
                        <option value="Bonani">Bonani</option>
                        <option value="Motijil">Motijil</option>
                        <option value="Dhaka">Dhaka</option>
                        <option value="Roungpur">Roungpur</option>
                    </select>
                </div>
                <div class="my-3">
                    <label for="" class="text-white font-bold uppercase focus:outline-none focus:border-none">Photo</label>
                    <input  class="w-full text-white" type="file" name="photo">
                </div>
                <button type="submit" class="w-full bg-white py-3 hover:bg-purple-700 transition hover:text-white">ADD NEW STUDENT</button>
