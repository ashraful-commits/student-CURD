<div style="background-image: url(); background-repeat: no-repeat; background-size: cover; height:900px;"
    class="container w-11/12  m-auto bg-green-200">
    <div class="row w-10/12 m-auto h-auto  bg-green-400">
       
        <!------------------------------------------------- student section -->
        <div class="student w-full p-5 h-auto flex flex-wrap justify-center  ">
            <div class="w-full h-12 bg-purple-900 text-center border-b-4 border-b-white">
                <h1 class="text-white font-bold mt-2"> <%= user.first_name %> <%= user.last_name %>  </h1>
            </div>
           <div class="w-full flex">
            <!-- sidebar -->
            <div class="w-4/12 h-full bg-purple-500 mb-3 shadow-2xl border-2 border-white mt-5" >
                <img src="/images/<%= user.photo %> " class="w-52 mt-3  h-52 rounded-full m-auto border-4 border-white " alt="">
                <ul class="mt-5">
                    <li class="my-2 bg-purple-800 text-white px-5 py-3 hover:bg-white hover:text-purple-900 transitions font-bold"><a href="/students/profile"> <i class="fas fa-user"></i> Profile</a></li>
                    <li class="my-2 bg-purple-800 text-white px-5 py-3 hover:bg-white hover:text-purple-900 transitions font-bold"><a href="/students/profile"> <i class="fas fa-edit"></i> Edit</a></li>
                    <li class="my-2 bg-purple-800 text-white px-5 py-3 hover:bg-white hover:text-purple-900 transitions font-bold"><a href=""> <i class="fas fa-lock"></i> Change Password</a></li>
                    <li class="my-2 bg-purple-800 text-white px-5 py-3 hover:bg-white hover:text-purple-900 transitions font-bold"><a href=""> <i class="fas fa-camera"></i> Profile Photo</a></li>
                    <li class="my-2 bg-purple-800 text-white px-5 py-3 hover:bg-white hover:text-purple-900 transitions font-bold"><a href="/logout"> <i class="fa-solid fa-right-from-bracket"></i> Log Out</a></li>
                   
                </ul>
            </div>
            <!-- body  -->
            <div class="w-8/12 h-full bg-green-500 ml-3 mt-5 border-2 border-white">
                            <div class="bg-purple-900 w-full h-12 border-b-2 border-b-white text-center ">
                                <h1 class="text-white font-bold pt-3">You can Change profile</h1>
                            </div>
                <form action="/students/edit/<%= user._id %> " method="POST"  class="flex flex-col w-full bg-purple-500 h-full  " >
                   <div class="bg-red-200 text-center">
                    <% if (message) { %>
                        <p class="w-full h-8 text-purple-900"><%= message %> </p>
                    <% } %>
                   </div>
                    <div class="my-1 text-center flex w-full ">
                        <input type="text" name="first_name" class=" w-6/12  bg-white h-8 my-1 hover:border-2 hover:border-amber-300  focus:bg-amber-300 placeholder-pink-900 font-bold transition-all hover:scale-110  pl-5 focus:border-none focus:outline-none"
                            placeholder="Fist Name" value=" <%= user.first_name %>  ">
                        <input type="text" name="last_name" class="w-6/12 h-8 my-1 transition-all hover:border-2 hover:border-amber-300  focus:bg-amber-300 hover:scale-110 bg-white placeholder-pink-900 font-bold  pl-5 focus:border-none focus:outline-none"
                            placeholder="Last Name" value=" <%= user.last_name %>  ">
                    </div>
                    
                    
                    <div class="my-1 text-center w-full">
                        <input type="text" name="age" class="w-full transition-all hover:border-2 hover:border-amber-300  focus:bg-amber-300 hover:scale-110 bg-white h-8 my-1 placeholder-pink-900 font-bold  pl-5 focus:border-none focus:outline-none" placeholder="Age" id="" value=" <%= user.age %>  ">
                    </div>
                    <div class="my-1 text-center w-full">
                        <input type="text" name="cell" class="w-full transition-all hover:border-2 hover:border-amber-300  focus:bg-amber-300 hover:scale-110 placeholder-pink-900 font-bold bg-white h-8 my-1  pl-5 focus:border-none focus:outline-none" placeholder="Mobile Number" id="" value=" <%= user.cell %>  ">
                    </div>
                    <div class="my-1 text-center w-full">
                        <input type="email" name="email" class="w-full transition-all hover:border-2 hover:border-amber-300   focus:bg-amber-300 hover:scale-110 placeholder-pink-900 font-bold bg-white h-8 my-1 pl-5 focus:border-none focus:outline-none" placeholder="Email" value=" <%= user.email %>  ">
                    </div>
                    <div class="my-1 text-center w-full">
                    <select class="w-full h-8 my-1 text-pink-800 font-bold hover:border-2 hover:border-amber-300   focus:bg-amber-300 pr-5 transition-all hover:scale-110  bg-white   pl-5" name="location" id="">
                        <option value="Mirpur">Location</option>
                        <option <%= user.location == 'Mirpur' ? 'selected' : ''%> value="Mirpur">Mirpur</option>
                        <option <%= user.location == 'Badda' ? 'selected' : ''%> value="Badda">Badda</option>
                        <option <%= user.location == 'Uttara' ? 'selected' : ''%> value="Uttara">Uttara</option>
                        <option <%= user.location == 'Motijil' ? 'selected' : ''%> value="Motijil">Motijil</option>
                    </select>
                    </div>
                    <div class="my-1 text-center w-full">
                    <select class="w-full h-8 my-1 font-bold transition-all hover:border-2 hover:border-amber-300  focus:bg-amber-300 hover:scale-110 text-pink-900
                        bg-white  pl-5 pr-5" name="gender" id="">
                        <option class="  " value="Male">Gender</option>
                        <option <%= user.gender == 'Male' ? 'selected' : ''%> value="Female">Male</option>
                        <option <%= user.gender == 'Female' ? 'selected' : ''%> value="Female">Female</option>
                    </select>
                    </div>
                    
                   
                    <button class="w-full h-8   bg-pink-700 transition-all  hover:border-2 hover:border-amber-300 hover:scale-110 hover:shadow-3xl hover:shadow-white  text-lg text-white font-bold hover:text-pink-600  hover:bg-white mb-0"
                    type="submit"  href="">Save</button>
                    
                </form>    
            
            </div>
           </div>
   
        </div>
    </div>
</div>


